                        <label for="{{this.id}}" style="padding-left: 30px;">{{this.flightDuration}}</label>
                    </th>
                    <th>
                        <label for="{{this.id}}" style="padding-left: 30px;">{{this.flightType}}</label>
                    </th>
                    <th>
                        <label for="{{this.id}}" style="padding-left: 30px;">${{this.flightPrice}}</label>
                    </th>
                    <th>
                        <label for="{{this.id}}" style="padding-left: 30px;">{{this.departureDate}}</label>
                    </th>
                    <th>
                        <label for="{{this.id}}" style="padding-left: 30px;">{{this.flightT}}</label>
                    </th>
                    <th>
                        <button style="margin-left: 50px;width:100px;margin-bottom: 5px;margin-right: 10px;" >Flight Details</button>
