{{# if flights}}
         
        <div class="flightdetailsContainer" style="width: 80%;margin-left: 200px;">
            <div>
                <h2 style="padding-left: 360px;">Flight Details</h2>
                <hr>
            </div>
            <table>
                <tr>
                    <th>
                        
                    </th>
                    <th>    </th>
                    <th >
                        <label style="font-size: 20px; padding-left: 30px;">Flight Airline</label>
                    </th>
                    <th>     </th>
                    <th >
                        <label style="font-size: 20px; padding-left: 30px;">Orgin City</label>
                    </th>
                    <th>    </th>
                    <th>
                        <label style="font-size: 20px;  padding-left: 30px">Destination City</label>
